{
  "version": "1.0.0",
  "name": "sequential-ecosystem",
  "description": "Sequential task execution ecosystem with Deno/Bun native support",
  "imports": {
    "sequential-flow": "npm:sequential-flow@^1.0.0",
    "sdk-http-wrapper": "./packages/sdk-http-wrapper/src/",
    "tasker-adaptor": "./packages/tasker-adaptor-supabase/src/",
    "std/": "https://deno.land/std@0.208.0/"
  },
  "tasks": {
    "dev": "deno run --allow-all dev-deno.ts --sqlite",
    "dev:sqlite": "deno run --allow-all dev-deno.ts --sqlite",
    "dev:supabase": "deno run --allow-all dev-deno.ts --supabase",
    "test": "deno test --allow-all",
    "fmt": "deno fmt",
    "lint": "deno lint"
  }
}
