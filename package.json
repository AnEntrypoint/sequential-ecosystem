{
  "name": "sequential-ecosystem",
  "version": "1.0.0",
  "description": "Sequential task execution ecosystem with Deno/Bun native support",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun --watch dev-bun.ts --sqlite",
    "dev:sqlite": "bun --watch dev-bun.ts --sqlite",
    "dev:supabase": "bun --watch dev-bun.ts --supabase",
    "dev:port": "bun --watch dev-bun.ts --sqlite --port",
    "dev:node": "nodemon --exec node dev-server.js --sqlite",
    "dev:node:supabase": "nodemon --exec node dev-server.js --supabase",
    "test": "bun test",
    "test:tasker": "bun test packages/tasker-sequential",
    "health": "curl http://localhost:3000/health",
    "link": "bash setup-npm-links.sh",
    "lint": "echo 'Linting...'"
  },
  "keywords": [
    "tasker",
    "sequential",
    "task-execution",
    "deno",
    "bun"
  ],
  "devDependencies": {
    "nodemon": "^3.1.0"
  },
  "workspaces": [
    "packages/*"
  ]
}
