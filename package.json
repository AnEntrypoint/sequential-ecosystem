{
  "name": "sequential-ecosystem",
  "version": "1.0.0",
  "description": "Infinite-length task execution with automatic suspend/resume and xstate integration",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "bun build cli.ts --outdir ./dist --target node",
    "dev": "node --loader ts-node/esm cli.ts",
    "start": "node cli.js",
    "cli": "node cli.js",
    "init": "node cli.js init",
    "create": "node cli.js create-task",
    "run": "node cli.js run",
    "list": "node cli.js list",
    "sync": "node cli.js sync-tasks"
  },
  "keywords": [
    "sequential",
    "sequential",
    "task-execution",
    "xstate",
    "suspend-resume",
    "deno",
    "bun",
    "node",
    "infinite-tasks"
  ],
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "bun-types": "latest"
  },
  "workspaces": [
    "packages/*"
  ],
  "bin": {
    "sequential-ecosystem": "./cli.js",
    "seq": "./cli.js"
  },
  "files": [
    "cli.ts",
    "cli.js",
    "tools/**/*",
    "tasks/**/*",
    "packages/**/src/**/*",
    "packages/**/lib/**/*",
    "packages/**/taskcode/**/*",
    "CLAUDE.md",
    "CHANGELOG.md",
    "README.md"
  ],
  "dependencies": {
    "commander": "^11.0.0",
    "sequential-adaptor": "file:./packages/sequential-adaptor",
    "sequential-flow": "file:./packages/sequential-flow",
    "sequential-fetch": "file:./packages/sequential-fetch"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}