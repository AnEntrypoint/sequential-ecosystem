{
  "name": "sequential-ecosystem",
  "version": "1.0.0",
  "description": "Sequential task execution ecosystem with Deno/Bun native support",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "bun build cli.ts --outdir ./dist --target node",
    "dev": "bun run cli.ts",
    "start": "bun run cli.ts start",
    "create-task": "bun run cli.ts create-task",
    "setup-gapi": "bun run cli.ts setup-gapi",
    "init": "bun run cli.ts init"
  },
  "keywords": [
    "tasker",
    "sequential",
    "task-execution",
    "deno",
    "bun"
  ],
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "bun-types": "latest"
  },
  "workspaces": [
    "packages/*"
  ],
  "bin": {
    "sequential-ecosystem": "./dist/cli.js"
  },
  "files": [
    "cli.ts",
    "lib/**/*",
    "packages/**/src/**/*",
    "packages/**/taskcode/**/*",
    "README.md"
  ],
  "dependencies": {
    "commander": "^11.0.0"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}